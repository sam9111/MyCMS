<h2 class=" pb-10  text-4xl">All Users</h2>
<% if users.any? %>
  <table class="table-auto">
    <thead>
      <tr class="text-center underline">
        <th class="p-4 " >ID</th>
        <th class="p-4 ">Created On</th>
        <th class="p-4 " >Name</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr class="text-center">
          <td class="p-4 " ><%= user.id%></td>
          <td class="p-4 "><%= user.created_at.to_date %></td>
          <td class="p-4 "><%= user.name.capitalize %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-red-600  ">No users!</p>
<% end %>
