<div class="flex-row flex">
  <section class="flex flex-col ml-40">
    <h2 class=" pb-20  text-4xl">All Users</h2>
    <div class="flex underline">
      <p>Created On</p>
      <p class="pl-9">Name</p>
    </div>
    <% @users.each do |user| %>
      <div class="inline-flex space-x-1 py-2">
        <p ><%= user.created_at.to_formatted_s(:short) %></p>
        <p class="px-5"><%= user.name.capitalize %></p>
      </div>
    <% end %>
  </section>
  <section class="flex flex-col mx-40 ">
    <h2 class=" pb-20  text-4xl">All Menus</h2>
    <% @menus.each do |menu| %>
      <%= link_to menu.name.capitalize ,menu_path(id: menu.id),class: "btn text-2xl text-center py-4 px-14  my-4 bg-blue-400" %>
    <% end %>
    <%= link_to "Create new menu",new_menu_path,class:  " btn text-2xl text-center py-4 px-10  my-4" %>
  </section>
