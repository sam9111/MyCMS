<h1 class="text-center "> Today's Menu</h1>
<h2 class=" py-10  text-4xl mx-auto underline"><%=@active_menu.name.capitalize %></h2>
<section class="flex flex-col  ">
  <% if @menu_items.any?%>
    <% @menu_items.each do |menuItem| %>
      <div class="btn text-2xl text-center py-8 px-10  my-4 bg-purple-500 mx-80 inline-flex " >
        <%= link_to menuItem.name,menu_item_path(id:menuItem.id,menu_id:@current_menu_id)%>
        <p class="mx-auto">$<%= menuItem.price %></p>
      </div>
    <% end %>
  <% end %>
</section>
